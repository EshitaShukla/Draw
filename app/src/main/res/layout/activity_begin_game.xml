<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"

    tools:context="io.eshita.draw.activities.BeginGame">

    <LinearLayout
        android:id="@+id/beginActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/drawingCount"
                fontPath="fonts/mono_light.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="Let's Draw!"
                android:textSize="22sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/newLabelView"
                fontPath="fonts/marker.ttf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/draw_a_label_in_under_25_seconds"
                android:textSize="32sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/startGameBtn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                fontPath="fonts/mono_light.ttf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/let_s_go"
                android:textColor="@android:color/white"
                tools:ignore="MissingPrefix" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
